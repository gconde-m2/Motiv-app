<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h1>{{name}}</h1>

            <form action="/main/goals/edit-goals/{{_id}}/add-sentence" method="post">

                <div class="form-group">
                    <label>Phrase</label>
                    <input name="sentence" type="text" placeholder="Write yourself a message">
                </div>

                <div class="form-group">
                    <label for="exampleFormControlSelect1">Theme/s</label>
                    <select name="theme" type="checkbox" class="form-control" multiple>

                        <option value="art">Art</option>
                        <option value="beauty">Beauty</option>
                        <option value="friends">Friends</option>
                        <option value="food">Food</option>
                        <option value="health">Health</option>
                        <option value="hobbies">Hobbies</option>
                        <option value="home">Home</option>
                        <option value="love">Love</option>
                        <option value="social">Social</option>
                        <option value="sports">Sports</option>
                        <option value="travel">Travel</option>
                        <option value="work">Work</option>

                    </select>
                </div>

                <button type="submit" class="btn btn-dark">Create</button>
            </form>
        </div>
    </div>
</div>