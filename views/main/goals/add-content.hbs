<h2 class="logo">Motiv //add</h2>
<div class="edit-box">
    <h3>{{goal.name}}</h3>
    <div class="row">
        <div class="col-sm-11 col-md-11 ">
            <form action="/main/goals/edit-goals/{{goal.id}}/add-content" method="post" enctype="multipart/form-data">

                <div class="form-group">
                    <label for="exampleFormControlSelect1">Theme/s</label>
                    <select name="theme" class="form-control" id="exampleFormControlSelect1">
                        <option value="social">social</option>
                        <option value="work">work</option>
                        <option value="health">health</option>
                        <option value="beauty">beauty</option>
                        <option value="home">home</option>
                        <option value="friends">friends</option>
                        <option value="sports">sports</option>
                        <option value="food">food</option>
                        <option value="travel">travel</option>

                    </select>
                </div>
                <div class="form-group">
                    <label>Phrase</label>
                    <input name="sentence" type="text" placeholder="">
                </div>

                {{!-- <input type="text" name="imageName" placeholder="Nombre de imagen"><br><br> --}}
                <input type="file" name="image"><br><br>
                <input type="submit" value="Subir">
                <button type="submit" class="btn btn-dark">Create</button>
            </form>
        </div>
    </div>
</div>